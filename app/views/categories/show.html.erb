<div class="container-fluid ">
	<div class="row pt-5">
		<div class="col-md-3">
			<%= render 'shared/widgetCategorias' %>

		</div>
		<div class="col-md-6">
			<div class="row d-flex align-items-stretch">


					<% @category.products.each do |product| %>
						<div class="card m-1" style="width: 13rem;">

						  <div class="card-img-box" style="background-image:url(<%= asset_path 'exampleGuitar.jpg' %>)">
           				 </div>

						  <div class="card-body d-flex align-items-end">
						  	<div class="w-100">
						  		<h5 class="card-title text-center"><%= product.name %></h5>

							    <p class="card-text">$<%= product.price %></p>

							    	<%= link_to product do %>

											<div class="text-right card-link btn d-flex">
												<h5 class="text-right">
													Go
													<i class="fas fa-angle-right"></i>
												</h5>
											</div>


									<% end %>



						  	</div>

						  </div>
						</div>
					<% end %>


			</div>
		</div>
		<div class="col-md-3">
			<h3>Lista de tiendas</h3>
		</div>
	</div>
</div>
